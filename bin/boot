#!/bin/bash

# Unofficial bash strict mode http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -eu
set -o pipefail
IFS=$'\n\t'

ssh-keygen -A

echo "ssh-rsa " > /etc/ssh/authorized_keys/arq

chown root /home/arq
chmod o-rwx /home/arq
mkdir -p /home/arq/sftp
chown arq /home/arq/sftp

echo "ssh-rsa " > /etc/ssh/authorized_keys/lgg4

chown root /home/arq
chmod o-rwx /home/lgg4
mkdir -p /home/lgg4/sftp
chown lgg4 /home/lgg4/sftp

/usr/sbin/sshd -e -D
